@model List<Match>
@{
    ViewData["Title"] = "Home Page";
}
<h2>List of current Matches</h2>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
        {
            <button class="btn btn-success" id="create-new-match">
                Create New Scrim!
            </button>
        }
    }
</p>

@if (Model.Count == 0)
{
    <h1 class="text-center">No matches yet! Ask an admin to start one!</h1>
}
else
{
    <div id="matches-container">
        @foreach (var match in Model)
        {
            //await Component.InvokeAsync("Match/MatchInfo", match);
            //await Html.PartialAsync("Match/MatchInfo", match);
            await Html.PartialAsync("../Partials/_MatchInfo", match);
        }
    </div>
}
