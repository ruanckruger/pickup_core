@model pickupsv2.Models.MapCreate

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>

    <h4>Map</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Map.MapId" />
                <input type="hidden" asp-for="Map.GameId" />
                <div class="form-group">
                    <label asp-for="Map.Name" class="control-label"></label>
                    <input asp-for="Map.Name" class="form-control" />
                    <span asp-validation-for="Map.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image">Upload Image</label>
                    <input asp-for="Image" type="file">
                    <span asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-controller="Games" asp-action="Edit" asp-route-id="@Model.Map.GameId">Back to List</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
